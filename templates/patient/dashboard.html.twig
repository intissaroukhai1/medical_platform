{% block stylesheets %}
{{ parent() }}
<style>
    /* ============ CARDS MODERNES ============ */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: var(--radius);
        padding: 1.75rem;
        box-shadow: var(--shadow-md);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        position: relative;
        overflow: hidden;
    }

    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, #0066CC 0%, #00C9A7 100%);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.5s ease;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
    }

    .card:hover::before {
        transform: scaleX(1);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 0.875rem;
        font-weight: 600;
        color: var(--text-secondary);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-icon {
        font-size: 2.5rem;
        filter: drop-shadow(0 2px 8px rgba(0, 102, 204, 0.2));
    }

    .card-value {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 1rem 0;
        background: linear-gradient(135deg, #0066CC 0%, #00C9A7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .card-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin: 0;
        font-weight: 500;
    }

    /* ============ SECTIONS MODERNES ============ */
    .appointments-section,
    .medical-records {
        background: rgba(255, 255, 255, 0.95);
        border-radius: var(--radius);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary);
    }

    /* ============ APPOINTMENT ITEMS ============ */
    .appointment-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        border: 2px solid var(--border);
        border-radius: 12px;
        margin-bottom: 1rem;
        transition: all 0.3s;
        background: white;
    }

    .appointment-item:last-child {
        margin-bottom: 0;
    }

    .appointment-item:hover {
        border-color: var(--primary);
        background: linear-gradient(135deg, rgba(0, 102, 204, 0.02), rgba(0, 201, 167, 0.02));
        transform: translateX(4px);
        box-shadow: var(--shadow-sm);
    }

    .appointment-info {
        flex: 1;
    }

    .appointment-doctor {
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .appointment-doctor::before {
        content: "üë®‚Äç‚öïÔ∏è";
        font-size: 1.25rem;
    }

    .appointment-date {
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .appointment-status {
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-size: 0.8125rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        white-space: nowrap;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .status-confirmed {
        background: linear-gradient(135deg, #ECFDF5, #D1FAE5);
        color: #065F46;
        border: 1px solid #A7F3D0;
    }

    .status-pending {
        background: linear-gradient(135deg, #FFFBEB, #FEF3C7);
        color: #92400E;
        border: 1px solid #FDE68A;
    }

    .status-cancelled {
        background: linear-gradient(135deg, #FEF2F2, #FEE2E2);
        color: #991B1B;
        border: 1px solid #FECACA;
    }

    /* ============ RECORD ITEMS ============ */
    .record-item {
        padding: 1.5rem;
        border: 2px solid var(--border);
        border-radius: 12px;
        margin-bottom: 1rem;
        background: white;
        transition: all 0.3s;
        cursor: pointer;
    }

    .record-item:last-child {
        margin-bottom: 0;
    }

    .record-item:hover {
        border-color: var(--primary);
        transform: translateY(-2px);
        box-shadow: var(--shadow-sm);
    }

    .record-type {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        background: linear-gradient(135deg, #0066CC, #00C9A7);
        color: white;
        padding: 0.375rem 0.875rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 102, 204, 0.25);
    }

    .record-type.type-bilan {
        background: linear-gradient(135deg, #06B6D4, #0891B2);
    }

    .record-type.type-diagnostic {
        background: linear-gradient(135deg, #10B981, #059669);
    }

    .record-name {
        font-weight: 700;
        color: var(--text-primary);
        font-size: 1.05rem;
        margin-bottom: 0.5rem;
    }

    .record-date {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* ============ RESPONSIVE ============ */
    @media (max-width: 768px) {
        .dashboard-grid {
            grid-template-columns: 1fr;
        }

        .section-header {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }

        .section-header .btn {
            width: 100%;
        }

        .appointment-item {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }

        .appointment-status {
            text-align: center;
        }

        .card-value {
            font-size: 2rem;
        }

        .appointments-section,
        .medical-records {
            padding: 1.5rem;
        }
    }
</style>
{% endblock %}

