<div class="modal-overlay" id="specialiteModal" onclick="closeModalOnOverlay(event)">
    <div class="modal-custom">
        <div class="modal-header-custom">
            <h5 class="modal-title-custom" id="modalTitle">‚ûï Ajouter une sp√©cialit√©</h5>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>

        {{ form_start(form, {
            action: path('specialite_index'),
            method: 'POST',
            attr: { id: 'specialiteForm' }
        }) }}
        
        <div class="modal-body-custom">
            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {
                    'attr': {'class': 'form-control', 'id': 'specialite_nom'}
                }) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control',
                        'rows': 4,
                        'id': 'specialite_description'
                    }
                }) }}
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="modal-footer-custom">
            <button type="button" class="btn-secondary" onclick="closeModal()">
                Annuler
            </button>
            <button type="submit" class="btn-submit">
                Enregistrer
            </button>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {

    const openBtn = document.getElementById('openSpecialiteModal');
    const modal   = document.getElementById('specialiteModal');
    const form    = document.getElementById('specialiteForm');
    const modalTitle = document.getElementById('modalTitle');

    if (!openBtn || !modal || !form) {
        console.error('‚ùå √âl√©ments introuvables');
        return;
    }

    // Ouvrir le modal pour AJOUTER
    openBtn.addEventListener('click', (e) => {
        e.preventDefault();
        console.log('‚úÖ Modal Ajout ouvert');
        
        // Reset du formulaire
        form.reset();
        form.action = '{{ path("specialite_index") }}';
        modalTitle.innerText = '‚ûï Ajouter une sp√©cialit√©';
        
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    });

    // Ouvrir le modal pour MODIFIER
    document.querySelectorAll('.btn-edit').forEach(button => {
        button.addEventListener('click', () => {
            console.log('‚úÖ Modal Modification ouvert');

            // R√©cup√©rer les donn√©es
            const id = button.dataset.id;
            const nom = button.dataset.nom;
            const description = button.dataset.description || '';

            // Pr√©-remplir les champs
            const nomInput = document.getElementById('{{ form.nom.vars.id }}');
            const descInput = document.getElementById('{{ form.description.vars.id }}');
            
            if (nomInput) nomInput.value = nom;
            if (descInput) descInput.value = description;

            // Changer l'action du formulaire pour modification
          form.action = `/specialites/${id}/edit`;
            
            // Changer le titre
            modalTitle.innerText = '‚úèÔ∏è Modifier la sp√©cialit√©';

            // Ouvrir le modal
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
    });

    // Fermer le modal
    window.closeModal = function () {
        console.log('‚úÖ Modal ferm√©');
        modal.classList.remove('active');
        document.body.style.overflow = 'auto';
    };

    // Fermer en cliquant sur l'overlay
    window.closeModalOnOverlay = function (event) {
        if (event.target === modal) {
            closeModal();
        }
    };

    // Fermer avec la touche Escape
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
            closeModal();
