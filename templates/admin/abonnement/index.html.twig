                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    Aucun abonnement cr√©√©
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# ================= MODAL ABONNEMENT ================= #}
<div class="modal-overlay" id="abonnementModal" onclick="closeModalOnOverlay(event)">
    <div class="modal-custom">
        <div class="modal-header-custom">
            <h5 class="modal-title-custom" id="modalTitle">
                ‚ûï Ajouter un abonnement
            </h5>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>

        {{ form_start(form, {
            action: path('abonnement_index'),
            method: 'POST',
            attr: { id: 'abonnementForm' }
        }) }}

        <div class="modal-body-custom">

            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.nbSecretairesAutorises) }}
                {{ form_widget(form.nbSecretairesAutorises, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {
                    'attr': {'class': 'form-control', 'rows': 4}
                }) }}
            </div>

            <div class="mb-3">
                {{ form_widget(form.actif) }}
                {{ form_label(form.actif) }}
            </div>
        </div>

        <div class="modal-footer-custom">
            <button type="button" class="btn-secondary" onclick="closeModal()">
                Annuler
            </button>
            <button type="submit" class="btn-submit">
                Enregistrer
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{# ================= JS IDENTIQUE √Ä SP√âCIALIT√âS ================= #}
<script>
document.addEventListener('DOMContentLoaded', () => {

    const modal = document.getElementById('abonnementModal');
    const form = document.getElementById('abonnementForm');
    const modalTitle = document.getElementById('modalTitle');
    const openBtn = document.getElementById('openAbonnementModal');

    openBtn?.addEventListener('click', () => {
        form.reset();
        form.action = '{{ path("abonnement_index") }}';
        modalTitle.innerText = '‚ûï Ajouter un abonnement';
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    });

    document.querySelectorAll('.btn-edit').forEach(btn => {
        btn.addEventListener('click', () => {

            document.getElementById('{{ form.nom.vars.id }}').value = btn.dataset.nom;
            document.getElementById('{{ form.prix.vars.id }}').value = btn.dataset.prix;
            document.getElementById('{{ form.nbSecretairesAutorises.vars.id }}').value = btn.dataset.nb;
            document.getElementById('{{ form.description.vars.id }}').value = btn.dataset.description;

           form.action = '{{ path("abonnement_edit", {id: "__ID__"}) }}'
    .replace('__ID__', btn.dataset.id);
            modalTitle.innerText = '‚úèÔ∏è Modifier abonnement';

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
    });

    window.closeModal = function () {
        modal.classList.remove('active');
        document.body.style.overflow = 'auto';
    };

    window.closeModalOnOverlay = function (e) {
        if (e.target === modal) closeModal();
    };
});
</script>

