{% extends 'admin/_layout_admin.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block admin_content %}

<style>
/* ================= VARIABLES CSS MODERNES ================= */
:root {
    --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-success: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    --gradient-danger: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
    --gradient-info: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --gradient-card: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    
    --color-text-primary: #1a202c;
    --color-text-secondary: #718096;
    --color-border: #e2e8f0;
    --color-bg-light: #f7fafc;
    
    --shadow-glass: 0 8px 32px rgba(31, 38, 135, 0.15);
    --shadow-hover: 0 20px 60px rgba(0, 0, 0, 0.12);
    --shadow-card: 0 4px 20px rgba(0, 0, 0, 0.08);
    --shadow-avatar: 0 10px 40px rgba(102, 126, 234, 0.4);
    
    --radius-lg: 20px;
    --radius-md: 12px;
    --radius-sm: 8px;
    
    --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ================= CONTAINER ================= */
.container-fluid {
    padding: 3rem;
    background: transparent;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ================= TITRE PRINCIPAL ================= */
h2.fw-bold {
    font-size: 2.5rem;
    font-weight: 800 !important;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 2.5rem !important;
    letter-spacing: -0.5px;
    text-align: center;
    position: relative;
    padding-bottom: 1rem;
}

h2.fw-bold::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: 10px;
    animation: slideIn 0.8s ease-out;
}

@keyframes slideIn {
    from {
        width: 0;
    }
    to {
        width: 80px;
    }
}

/* ================= FLASH MESSAGES ================= */
.alert {
    border-radius: var(--radius-md);
    border: none;
    padding: 1.25rem 1.75rem;
    font-weight: 600;
    box-shadow: var(--shadow-card);
    backdrop-filter: blur(10px);
    margin-bottom: 2rem;
    animation: slideInRight 0.5s ease-out;
    max-width: 500px;
    width: 100%;
}

@keyframes slideInRight {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.alert-success {
    background: linear-gradient(135deg, rgba(17, 153, 142, 0.15) 0%, rgba(56, 239, 125, 0.15) 100%);
    color: #0d9488;
    border-left: 4px solid #11998e;
}

.alert-danger {
    background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(238, 90, 111, 0.15) 100%);
    color: #dc2626;
    border-left: 4px solid #ff6b6b;
}

.alert-info {
    background: linear-gradient(135deg, rgba(79, 172, 254, 0.15) 0%, rgba(0, 242, 254, 0.15) 100%);
    color: #0284c7;
    border-left: 4px solid #4facfe;
}

.alert-warning {
    background: linear-gradient(135deg, rgba(240, 147, 251, 0.15) 0%, rgba(245, 87, 108, 0.15) 100%);
    color: #ea580c;
    border-left: 4px solid #f093fb;
}

/* ================= CARD PROFIL ================= */
.card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border: 2px solid rgba(255, 255, 255, 0.8);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-glass);
    padding: 3rem !important;
    max-width: 500px !important;
    width: 100%;
    transition: var(--transition-smooth);
    position: relative;
    overflow: hidden;
}

.card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: var(--gradient-primary);
    animation: slideWidth 1s ease-out;
}

@keyframes slideWidth {
    from {
        transform: scaleX(0);
    }
    to {
        transform: scaleX(1);
    }
}

.card:hover {
    box-shadow: var(--shadow-hover);
    transform: translateY(-5px);
}

/* ================= AVATAR SECTION ================= */
.text-center.mb-4 {
    margin-bottom: 2.5rem !important;
}

.text-center.mb-4 > div {
    width: 140px !important;
    height: 140px !important;
    margin: auto;
    border-radius: 50%;
    overflow: hidden;
    border: 5px solid transparent;
    background: var(--gradient-primary) padding-box, var(--gradient-primary) border-box;
    box-shadow: var(--shadow-avatar);
    transition: var(--transition-smooth);
    position: relative;
}

.text-center.mb-4 > div::after {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s;
}

.text-center.mb-4 > div:hover::after {
    opacity: 1;
}

.text-center.mb-4 > div:hover {
    transform: scale(1.08) rotate(5deg);
    box-shadow: 0 15px 50px rgba(102, 126, 234, 0.5);
}

.text-center.mb-4 img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
}

.text-center.mb-4 > div > div {
    width: 100% !important;
    height: 100% !important;
    background: var(--gradient-primary) !important;
    color: white !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    font-size: 64px !important;
    font-weight: 800 !important;
    text-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

/* ================= FORM ELEMENTS ================= */
form {
    width: 100%;
}

.mb-3 {
    margin-bottom: 1.75rem !important;
}

.form-label {
    display: block;
    font-weight: 700 !important;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
    font-size: 1rem;
    letter-spacing: 0.3px;
    position: relative;
    padding-left: 12px;
}

.form-label::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 18px;
    background: var(--gradient-primary);
    border-radius: 2px;
}

.form-control {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: 1rem;
    transition: var(--transition-smooth);
    background: white;
    font-weight: 500;
    color: var(--color-text-primary);
}

.form-control:disabled {
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    color: var(--color-text-secondary);
    cursor: not-allowed;
    border-color: #e2e8f0;
}

.form-control:not(:disabled):focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
    background: #fafbff;
}

.form-control:not(:disabled):hover {
    border-color: #a8b2d1;
}

.form-control[type="file"] {
    padding: 0.875rem 1.25rem;
    cursor: pointer;
    font-weight: 600;
}

.form-control[type="file"]::file-selector-button {
    padding: 0.5rem 1.25rem;
    margin-right: 1rem;
    border: none;
    border-radius: var(--radius-sm);
    background: var(--gradient-info);
    color: white;
    font-weight: 700;
    cursor: pointer;
    transition: var(--transition-smooth);
    box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);
}

.form-control[type="file"]::file-selector-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(79, 172, 254, 0.4);
}

/* ================= BOUTON PRINCIPAL ================= */
.btn-primary {
    background: var(--gradient-primary);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: var(--radius-md);
    font-weight: 700;
    font-size: 1.05rem;
    cursor: pointer;
    transition: var(--transition-smooth);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    position: relative;
    overflow: hidden;
    width: 100%;
    letter-spacing: 0.5px;
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s;
}

.btn-primary:hover::before {
    left: 100%;
}

.btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
}

.btn-primary:active {
    transform: translateY(-1px) scale(0.98);
}

/* ================= RESPONSIVE ================= */
@media (max-width: 768px) {
    .container-fluid {
        padding: 1.5rem;
    }
    
    h2.fw-bold {
        font-size: 2rem;
    }
    
    .card {
        padding: 2rem !important;
        max-width: 100% !important;
    }
    
    .text-center.mb-4 > div {
        width: 120px !important;
        height: 120px !important;
    }
    
    .text-center.mb-4 > div > div {
        font-size: 56px !important;
    }
    
    .form-label {
        font-size: 0.95rem;
    }
    
    .form-control {
        padding: 0.875rem 1rem;
        font-size: 0.95rem;
    }
    
    .btn-primary {
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .container-fluid {
        padding: 1rem;
    }
    
    h2.fw-bold {
        font-size: 1.75rem;
    }
    
    .card {
        padding: 1.5rem !important;
    }
    
    .text-center.mb-4 > div {
        width: 100px !important;
        height: 100px !important;
    }
    
    .text-center.mb-4 > div > div {
        font-size: 48px !important;
    }
}

/* ================= ANIMATIONS SUPPLÃ‰MENTAIRES ================= */
@keyframes pulse {
    0%, 100% {
        box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4);
    }
    50% {
        box-shadow: 0 15px 50px rgba(102, 126, 234, 0.6);
    }
}

.text-center.mb-4 > div {
    animation: pulse 3s infinite;
}

/* ================= SCROLLBAR PERSONNALISÃ‰E ================= */
.card::-webkit-scrollbar {
    width: 8px;
}

.card::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 10px;
}

.card::-webkit-scrollbar-thumb {
    background: var(--gradient-primary);
    border-radius: 10px;
}

.card::-webkit-scrollbar-thumb:hover {
    background: var(--gradient-info);
}
</style>

