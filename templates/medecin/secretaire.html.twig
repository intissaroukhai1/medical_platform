{% block medecin_content %}
<div class="secretaires-container">
    
    <!-- PAGE HEADER -->
    <div class="page-header">
        <h1 class="page-title">üë©‚Äçüíº Gestion des secr√©taires</h1>
        <p class="page-subtitle">G√©rez votre √©quipe de secr√©taires m√©dicales</p>
    </div>

    <!-- FLASH MESSAGES -->
    {% for type, messages in app.flashes %}
        <div class="flash-messages">
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible fade show">
                    <strong>{{ type|title }} :</strong> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    <!-- QUOTA SECTION -->
    {% set abonnement = medecin.getActiveAbonnement() %}
    {% if abonnement %}
        {% set quota = abonnement.abonnement.nbSecretairesAutorises %}
        {% set utilises = secretaires|filter(s => s.actif)|length %}
        {% set pourcentage = (utilises / quota * 100)|round %}
        
        <div class="quota-card">
            <div class="quota-info">
                <div class="quota-icon">üìä</div>
                <div class="quota-details">
                    <strong>Quota d'utilisation</strong>
                    <div class="quota-numbers">{{ utilises }} / {{ quota }}</div>
                </div>
            </div>
            <div class="quota-progress">
                <div class="quota-progress-bar" style="width: {{ pourcentage }}%;"></div>
            </div>
        </div>
    {% else %}
        <div class="no-subscription-card">
            <p>Aucun abonnement actif ‚Äî La gestion des secr√©taires est d√©sactiv√©e</p>
        </div>
    {% endif %}

    <!-- ADD SECRETARY FORM -->
    {% if abonnement and utilises < quota %}
        <div class="add-secretary-card">
            <div class="card-header-custom">
                ‚ûï Ajouter une nouvelle secr√©taire
            </div>
            <div class="card-body-custom">
                <form method="post" action="{{ path('medecin_secretaire_add') }}" class="add-form">
                    <div class="form-group-flex">
                        <label class="form-label-custom">Nom</label>
                        <input type="text"
                               name="nom"
                               class="form-control-custom"
                               
                               required>
                    </div>
                    <div class="form-group-flex">
                        <label class="form-label-custom">Pr√©nom</label>
                        <input type="text"
                               name="prenom"
                               class="form-control-custom"
                            
                               required>
                    </div>
                    <div class="form-group-flex">
                        <label class="form-label-custom">Adresse email</label>
                        <input type="email"
                               name="email"
                               class="form-control-custom"
                               placeholder="exemple@email.com"
                               required>
                    </div>
                    <div class="form-group-flex">
                        <label class="form-label-custom">Type de contrat</label>
                        <select name="typeContrat"
                                class="form-control-custom"
                                required>
                            <option value="">-- Choisir le type de contrat --</option>
                            <option value="CDI">CDI</option>
                            <option value="CDD">CDD</option>
                            <option value="STAGE">Stage</option>
                        </select>
                    </div>
                    <button type="submit" class="btn-add">
                        Ajouter
                    </button>
                </form>
            </div>
        </div>
    {% endif %}

    <!-- SECRETARIES LIST -->
    <div class="secretaries-list-card">
        <div class="list-header">
            üìã Liste de mes secr√©taires
        </div>
        
        {% if secretaires is empty %}
            <div class="empty-state">
                <p>Aucune secr√©taire n'est encore li√©e √† votre compte</p>
            </div>
        {% else %}
            <div class="table-container">
                <table class="table-custom">
                    <thead>
                        <tr>
                            <th>Nom complet</th>
                            <th>Email</th>
                            <th>Statut</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for s in secretaires %}
                            <tr>
                                <td>
                                    <div class="secretary-name">
                                        {{ s.prenom }} {{ s.nom }}
                                    </div>
                                </td>
                                <td>
                                    <div class="secretary-email">
                                        {{ s.email }}
                                    </div>
                                </td>
                                <td>
                                    {% if s.actif %}
                                        <span class="badge-custom badge-active">Active</span>
                                    {% else %}
                                        <span class="badge-custom badge-inactive">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        <!-- TOGGLE BUTTON -->
                                        <form method="post"
                                              action="{{ path('medecin_secretaire_toggle', {id: s.id}) }}"
                                              style="display: inline;">
                                            <button type="submit" class="btn-action btn-toggle">
                                                {{ s.actif ? 'üîí D√©sactiver' : 'üîì Activer' }}
                                            </button>
                                        </form>

                                        <!-- DELETE BUTTON -->
                                        <form method="post"
                                              action="{{ path('medecin_secretaire_remove', {id: s.id}) }}"
                                              style="display: inline;"
                                              onsubmit="return confirm('‚ö†Ô∏è √ätes-vous s√ªr de vouloir supprimer cette secr√©taire ?');">
                                            <button type="submit" class="btn-action btn-delete">
                                                üóëÔ∏è Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

</div>
