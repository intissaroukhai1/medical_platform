<script>
document.getElementById("registerForm").addEventListener("submit", async function(e) {
    e.preventDefault();

    let form = e.target;
    let data = Object.fromEntries(new FormData(form).entries());

    // üî• Ne pas supprimer medecinId m√™me si vide
    for (let key in data) {
        if (key !== "medecinId" && data[key] === "") {
            delete data[key];
        }
    }

    let response;
    let result;

    try {
        response = await fetch("/api/auth/register", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data)
        });

        // üî• V√©rifier si la r√©ponse est JSON avant de parser
        const contentType = response.headers.get("content-type");

        if (contentType && contentType.includes("application/json")) {
            result = await response.json();
        } else {
            // üî• R√©ponse HTML ‚Üí afficher l‚Äôerreur c√¥t√© Symfony !
            const text = await response.text();
            console.error("R√©ponse HTML re√ßue :", text);
            alert("Erreur serveur : voir console");
            return;
        }

        // üî• Gestion des erreurs
        if (!response.ok) {
            alert("‚ùå " + result.message);
            return;
        }

        // üî• Succ√®s
        alert("‚úî Compte cr√©√© avec succ√®s !");
        window.location.href = "/login";

    } catch (err) {
        alert("Erreur r√©seau : " + err);
    }
});

async function loadMedecins() {
    let select = document.querySelector("select[name='medecinId']");

    // üî• Emp√™cher la duplication
    select.innerHTML = `<option value="">-- Choisir un m√©decin --</option>`;

    try {
        let response = await fetch("/api/medecins");
        let medecins = await response.json();

        medecins.forEach(m => {
            let option = document.createElement("option");
            option.value = m.id;
            option.textContent = m.nom + " " + m.prenom;
            select.appendChild(option);
        });

    } catch (e) {
        console.error("Erreur chargement m√©decins", e);
    }
}

</script>


