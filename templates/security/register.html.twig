<script>

function toggleRoleFields() {
    // Cacher toutes les sections
    document.querySelectorAll(".role-section").forEach(el => el.style.display = "none");

    // D√©sactiver tous les champs internes pour √©viter validation
    document.querySelectorAll(".role-section select, .role-section input, .role-section textarea")
        .forEach(el => el.disabled = true);

    let role = document.getElementById("role").value;

    // S√©lection m√©decinId
    let medecinSelect = document.querySelector("select[name='medecinId']");
    medecinSelect.removeAttribute("required");

    if (role === "PATIENT") {
        let section = document.getElementById("patient-fields");
        section.style.display = "block";
        section.querySelectorAll("input, select, textarea").forEach(el => el.disabled = false);
    }

    if (role === "MEDECIN") {
        let section = document.getElementById("medecin-fields");
        section.style.display = "block";
        section.querySelectorAll("input, select, textarea").forEach(el => el.disabled = false);
    }

    if (role === "SECRETAIRE") {
        let section = document.getElementById("secretaire-fields");
        section.style.display = "block";
        section.querySelectorAll("input, select, textarea").forEach(el => el.disabled = false);

        // Obligatoire seulement si secr√©taire
        medecinSelect.setAttribute("required", "required");
        loadMedecins();
    }

    if (role === "ADMIN") {
        let section = document.getElementById("admin-fields");
        section.style.display = "block";
        section.querySelectorAll("input, select, textarea").forEach(el => el.disabled = false);
    }
}
</script>



